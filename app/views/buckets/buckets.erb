<form action="/journal" method="post">
  <div id="grid_wrapper">

    <header>
      <div id="user_caption">
        <h1><%= @user.username %>'s buckets</h1>
      </div>
      <div class="message">
        <% if flash.has?(:message) %>
          <%= flash[:message]%>
        <% end %>
      </div>
      <div id="logout">
        <a href="/logout">logout</a>
      </div>

    </header>



      <section id="psi">

        <h2>psi</h2>

        <% @buckets.select {|bucket| bucket.potential}.each do |bucket| %>
          <%= erb :'partials/bucket_row', :layout => false, :locals => {:bucket => bucket} %>
        <% end %>

        <a href="buckets/new?potential=on">add_bucket</a>

      </section>

      <section id="psi_naught">

        <h2>psi_naught</h2>

        <% @buckets.select {|bucket| !bucket.potential}.each do |bucket| %>
          <%= erb :'partials/bucket_row', :layout => false, :locals => {:bucket => bucket} %>
        <% end %>

        <a href="buckets/new">add_bucket</a>

      </section>

      <section id="form_control">
        <input type="text" id="moment_value" name="moment_input">
        <button type="submit" id="moment_add" name="function" value="submit">submit</button>
      </section>



    <footer>
      <p><small>&copy; 2019 <strong>burnbucket</strong></small></p>
    </footer>
  </div>
</form>
