
<% if flash.has?(:messages) %>
<ul>
  <% flash[:messages].each do |message| %>
    <li><%= message.first %> - <%= message.flatten.last %></li>
  <% end %>
</ul>

<% end %>

<form action="/buckets/<%=@bucket.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <input type="text" name="bucket[name]" value="<%= @bucket.name %>">
  <input type="text" name="bucket[size]" value="<%= @bucket.size %>">
  <input type="text" name="bucket[unit]" <% if !@bucket.unit %>placeholder="unit" <%else%> value="<%= @bucket.unit.name %>"  <%end%>>
  <input type="submit" name="submit">
</form>
