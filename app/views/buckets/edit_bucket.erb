
<%= erb :'partials/bucket_breadcrumb' %>
<% if flash.has?(:message) %>
  <%= flash[:message]%>
<% end %>

<form action="/buckets/<%= @bucket.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="bucket[name]">Name</label>
  <input type="text" name="bucket[name]" value=<%= @bucket.name %>>
  </br>
  
  <h2>Moments</h2>

  <% @moments.each do |moment| %>

    <label for="entries[][name]">Name</label>
    <input type="text" name="entries[][name]" value=<%= moment.name %>>
    <label for="entries[][amount]">Amount</label>
    <input type="text" name="entries[][amount]" value=<%= moment.amount %>>
    <input type="hidden" name="entries[][id]" value=<%= moment.id %>>
    </br>
  <% end %>

  <label for="new_moment[name]">Name</label>
  <input type="text" name="new_moment[name]">

  <label for="new_moment[amount]">Amount</label>
  <input type="text" name="new_moment[amount]">
  </br>
  <input type="submit" name="submit">
</form>
