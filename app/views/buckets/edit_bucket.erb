
<%= erb :'partials/bucket_breadcrumb' %>
<% if flash.has?(:message) %>
  <%= flash[:message]%>
<% end %>

<form action="/buckets/<%= @bucket.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="bucket[name]">Name</label>
  <input type="text" name="bucket[name]" value=<%= @bucket.name %>>
  </br>

  <h2>Moments</h2>

  <% @moments.each do |moment| %>

    <label for="moments[][name]">Name</label>
    <input type="text" name="moments[][name]" value=<%= moment.name %>>
    <label for="moments[][amount]">Value</label>
    <input type="text" name="moments[][amount]" value=<%= moment.value %>>
    <label for="moments[][amount]">Unit</label>
    <input type="text" name="moments[][amount]" value=<%= moment.unit.name %>>
    <input type="hidden" name="moments[][id]" value=<%= moment.id %>>
    </br>
  <% end %>

  <label for="new_moment[name]">Name</label>
  <input type="text" name="new_moment[name]">

  <label for="new_moment[value]">value</label>
  <input type="text" name="new_moment[value]">

  <label for="new_unit[moment]">unit</label>
  <input type="text" name="new_unit[name]">
  </br>
  <input type="submit" name="submit">
</form>
